<p id="notice"><%= notice %></p>

<h1>Listing Quizzes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Question</th>
      <th>Corret answer</th>
      <th>User answer</th>
      <th>Video</th>
      <th>Article</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= quiz.question %></td>
        <td><%= quiz.corret_answer %></td>
        <td><%= quiz.user_answer %></td>
        <td><%= quiz.video %></td>
        <td><%= quiz.article_id %></td>
        <td><%= link_to 'Show', quiz %></td>
        <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
        <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

