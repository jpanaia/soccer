<p id="notice"><%= notice %></p>

<h1>Listing Scores</h1>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Score</th>
      <th>Article</th>
      <th>Issue</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scores.each do |score| %>
      <tr>
        <td><%= score.user.email %></td>
        <td><%= score.correct %></td>
        <td><%= score.article.title %></td>
        <td><%= score.issue.title %></td>
        <td><%= link_to 'Show', score %></td>
        <td><%= link_to 'Edit', edit_score_path(score) %></td>
        <td><%= link_to 'Destroy', score, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

