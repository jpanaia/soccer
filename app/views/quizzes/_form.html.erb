    <%= f.label "Correct Answer" %><br>
    <%= f.text_field :corret_answer, class: 'form-control'  %>
  </div>
  <div class="field form-group">
    <%= f.label :video %><br>
    <%= f.text_field :video, class: 'form-control'  %>
  </div>
