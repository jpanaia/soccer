<div class="row" id="article">
  <% @issue.articles.find_each.with_index do |article, index| %>
    <!-- Show first quiz -->
    <% if index == 0 %>  
      <div class="col-md-8">
        <div class="panel"> 
          <h3><%= article.title %></h3>
            <p><%= article.content.html_safe %></p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="well">
             <%= form_tag do %>
              <h2>Q: <%= article.quiz.question %></h2>
              <h3>A: <%=article.quiz.corret_answer%> </h3>

              <%= hidden_field_tag :quiz_id, article.quiz.id %> 
              <div class="field">
                <%= radio_button_tag(:user_answer, "#{article.quiz.wrong_answer1}") %>
                <%= label_tag(article.quiz.wrong_answer1) %><br/>

                <%= radio_button_tag(:user_answer, "#{article.quiz.wrong_answer2}") %>
                <%= label_tag(article.quiz.wrong_answer2) %><br/>

                <%= radio_button_tag(:user_answer, "#{article.quiz.corret_answer}") %>
                <%= label_tag(article.quiz.corret_answer) %>
              </div>      
              <div class="actions">
                <%= submit_tag("Submit") %>
              </div>

           <% end %>

          </div>
        </div>

        <% if article.quiz.user_answer == article.quiz.corret_answer %>
<!--           <h3>Good Job! Onto the next article!</h3>
 -->          <% next %>              
        <% else %>
          <% break %>
       <% end %>   
    <!-- Show additional quizzes -->    
    <% else %>
      <div class="col-md-8">
        <div class="panel">
          <h3><%= article.title %></h3>
          <p><%= article.content.html_safe %></p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="well">
          <%= form_tag do %>
            <h2>Q:<%= article.quiz.question %></h2>
            <h3>A: <%=article.quiz.corret_answer%> </h3>
            <%= hidden_field_tag :quiz_id, article.quiz.id %> 
            <div class="field">
              <%= radio_button_tag(:user_answer, "#{article.quiz.wrong_answer1}") %>
              <%= label_tag(article.quiz.wrong_answer1) %><br/>

              <%= radio_button_tag(:user_answer, "#{article.quiz.wrong_answer2}") %>
              <%= label_tag(article.quiz.wrong_answer2) %><br/>

              <%= radio_button_tag(:user_answer, "#{article.quiz.corret_answer}") %>
              <%= label_tag(article.quiz.corret_answer) %>
            </div>      
            <div class="actions">
                <%= submit_tag("Submit") %>
            </div>
          <% end %>
        </div>
      </div>

      <% if article.quiz.user_answer == article.quiz.corret_answer %>
         <% if article.quiz.video != '' %>
            <hr/>
            <br clear="all"/>
            <iframe width="300" height="215" src="//<%= article.quiz.video %>" frameborder="0" allowfullscreen></iframe>
            <%= button_to "Clear Quiz", :action => "clearQuiz" %>

          <% end %>
          <!-- <h3>Good Job! Onto the next article!</h3>-->        
        <% next %>               
      <% else %>
        <% break %>
      <% end %>  
    <% end %> 
  <% end %> <!-- end  each loop -->


</div> <!-- end row -->



